{
  "extends": "tsconfig/base.json",
  "compilerOptions": {
    "module": "commonjs",
    "target": "es2015",
    "declaration": true,
    "outDir": "./dist",
    "baseUrl": ".",
    "jsx": "react-jsx",
    "paths": {
      "@shared/*": ["./src/*"]
    },
    "typeRoots": [
      "./node_modules/@types",
      "./src/types"
    ]
  },
  "include": ["src/**/*.ts", "src/**/*.tsx", "src/**/*.js", "src/**/*.css"],
  "exclude": ["node_modules"]
}
